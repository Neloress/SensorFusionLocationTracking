<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SensorFusionLocationTracking.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <HorizontalStackLayout
                Spacing="10"
                Padding="10,0"
                HorizontalOptions="Fill">

                <Label x:Name="AccelerometerLabel"
                    Text="Accelerometer:"
                    WidthRequest="110"/>

                <Entry x:Name="ACCx"
                    Placeholder="X"/>

                <Entry x:Name="ACCy"
                    Placeholder="Y"/>

                <Entry x:Name="ACCz"
                    Placeholder="Z"/>

            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
